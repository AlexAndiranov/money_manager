<%= simple_form_for plan do |f| %>
  <%= f.input :name %>
  <%= f.association :category, include_blank: false %>
  <%= f.input :amount %>
  <%= f.input :start_date, as: :date, order: [:day, :month, :year] %>
  <%= f.input :end_date, as: :date, order: [:day, :month, :year] %>
  <%= f.button :submit %>
<% end %>