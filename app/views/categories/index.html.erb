<p> ALL CATEGORIES LIST </p>
<% @categories.each do |category| %>
	<p>
    <%= category.name %>
    <span><%= link_to 'Edit', edit_category_path(category) %></span>
    <span><%= link_to 'Show', category_path(category) %></span>
    <span><%= link_to 'Destroy', category_path(category), data: {confirm: 'Are you sure?'}, method: :delete %> </span>
  </p>
<% end %>

<%= link_to 'New category', new_category_path %>