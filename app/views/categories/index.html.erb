<p> ALL CATEGORIES LIST </p>
<div class="form-group">
  <button type="button" class="btn btn-default"><%= link_to 'New category', new_category_path %></button>
</div>
<div class="form-group">
  <button type="button" class="btn btn-default"><%= link_to 'New Charge', new_charge_path %></button>
</div>
<table class="table table-striped">
  <th> Name </th>
  <th> Created at: </th>
  <th> Updated at: </th>
  <th> Actions </th>
  <% @categories.each do |category| %>
    <tr>
      <td ><%= category.name %></td>
      <td><%= category.created_at %></td>
      <td><%= category.updated_at %></td>
      <td>
        <span><%= link_to 'Edit', edit_category_path(category), class: "btn btn-default"%></span>
        <span><%= link_to 'Destroy', category_path(category), class: "btn btn btn-danger", data: {confirm: 'Are you sure?'}, method: :delete %> </span>
      </td>
    </tr>
  <% end %>
</table>
<%= paginate @categories %>

