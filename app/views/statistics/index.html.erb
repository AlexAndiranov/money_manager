<h1> Statistics: </h1>
<% if @categories.present? %>
  <table class="table table-striped">
    <th> Category </th>
    <th> Plans </th>
    <th> Planned amount </th>

    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= category.plans.pluck(:name).join(', ') %></td>
        <td><%= category.plans.sum(:amount) %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p class="alert alert-warning"> Add some categories and plans! </p>
<% end %>